h4.fw-bold
  span.me-1 📮
  span = @post.segment.program.program
- status_classes = {'draft' => 'badge text-bg-secondary',
  'gmail_draft' => 'badge text-bg-success',
  'gmail_sent' => 'badge text-bg-warning',
  'archived' => 'badge bg-white text-red border '}
- if status_class = status_classes[@post.post_status]
  div(class=status_class)
    = @post.post_status_text

.container.mt-5
  .row
    .col-lg-8.offset-lg-2
      = link_to "Destroy this post", post_path(@post), data: { turbo_method: :delete, turbo_confirm: t('defaults.message.delete_confirm')}, class: 'btn btn-danger  mb-3', style: 'float: right'
    .col-lg-8.offset-lg-2
      .card.mb-3
        .card-header
          | 下書き
        ul class="list-group list-group-flush"
          li class="list-group-item"
            An 🎧 リスナー | From: #{current_user.email}
          li class="list-group-item"
            An 🎙 番組 | To: #{@post.segment.program.email}
          li class="list-group-item"
            An 📻 件名 | #{@post.segment.segment_title_for_email}
        .card-body
          = simple_format(@post.body)
          br
          - if @post.radio_name.present?
            div
              | (RN) 
              = @post.radio_name
            br
          - if @post.zip_code.present?
            div
              | (住所) 〒
              = @post.zip_code
          - if @post.prefecture.present? || @post.city.present? || @post.other_address.present?
            div
              = @post.prefecture
              = @post.city
              = @post.other_address
          - if @post.phone.present?
            div
              | (電話番号) 
              = @post.phone
          - if @post.legal_name.present?
            div
              | (名前) 
              = @post.legal_name

    .col-lg-8.offset-lg-2.d-flex.justify-content-center
      .btn-group
        = link_to "作成に戻る", edit_post_path(@post), class: 'btn btn-warning  mb-3 me-3'
      - if current_user.email.include?("@gmail.com")
        .btn-group
          = link_to "番組に送信", post_send_path(@post), data: { turbo_method: :get, turbo_confirm: t('defaults.message.post_confirm')}, class: 'btn btn-warning  mb-3 me-3'
        .btn-group
          = link_to "下書き（Gmail）", post_draft_path(@post), data: { turbo_method: :get, turbo_confirm: t('defaults.message.post_confirm')}, class: 'btn btn-warning  mb-3'
